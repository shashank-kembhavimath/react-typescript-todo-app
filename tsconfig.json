{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    //"emitDeclarationOnly": true,
    "outDir": "dist",
    "declarationMap": true,
    "types": [
      "@types/webrtc"
    ],
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "noEmit": true
  },
  "include": [
    "src/**/*"
  ]
}
